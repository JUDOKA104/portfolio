---
import "../styles/tailwind.css";
import AuroraBackground from "../components/ui/AuroraBackground";
import Navigation from "../components/Navigation";
import HeroNew from "../components/sections/HeroSection";
import ProjetsSection from "../components/sections/ProjetsSection";
import BiographieSection from "../components/sections/BiographieSection";
import Expertises from "../components/sections/Expertises";
import ContactSection from "../components/sections/ContactSection";
import Footer from "../components/layout/Footer";
---

<html lang="fr" class="scroll-smooth h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Enzo Oriol — Portfolio</title>
    <meta name="description" content="Développeur Full-Stack & Cybersécurité" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body
    id="top"
    class="bg-[#050505] text-white antialiased min-h-screen flex flex-col relative"
  >
    <AuroraBackground client:load />

    <Navigation client:load />

    <main class="relative z-10 w-full flex-grow overflow-x-hidden">
      <HeroNew client:load />
      <ProjetsSection client:visible />
      <Expertises client:visible />
      <BiographieSection client:visible />
      <ContactSection client:visible />
    </main>

    <Footer />
  </body>
</html>
